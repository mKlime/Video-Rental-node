<%- include('../../fragments/header.ejs')%>
    
    <div class="info container-fluid d-none">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Film został usunięty.
        </div>
    </div>
    
    <main>
        <h2>Lista filmów</h2>
        <table class="list">
            <thead>
                <tr>
                    <th>Nazwa filmu</th>
                    <th>Rok premiery</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Jumanji</td>
                    <td>1995</td>
                    <td>
                        <ul class="action-list">
                            <li><a href="/movie/details/1" class="btn-details details">Szczegóły</a></li>
                            <li><a href="" class="btn-edit edit">Edytuj</a></li>
                            <li><a href="#" class="btn-delete delete" data-toggle="modal" data-target="#exampleModalCenter">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
                
                <tr>
                    <td>Sposób na teściową</td>
                    <td>2005</td>
                    <td>
                        <ul class="action-list">
                            <li><a href="/movie/details/1"  class="btn-details details">Szczegóły</a></li>
                            <li><a href="" class="btn-edit edit">Edytuj</a></li>
                            <li><a href="#" class="btn-delete delete" data-toggle="modal" data-target="#exampleModalCenter">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
        <p><a href="/movie/add" class="button-add">Dodaj nowy film</a></p>

        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Usunięcie filmu</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Czy chcesz usunąć ten film?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Tak</button>
                  <button type="button" class="btn btn-light" data-dismiss="modal">Nie</button>
                </div>
              </div>
            </div>
        </div>   
            
    </main>
    
    
 <script>
        $(document).ready(function(){
            $('.btn-danger').click(function(){
                $('.info').removeClass('d-none').show()
            }) 
        });
</script>
<%- include('../../fragments/footer.ejs')%>