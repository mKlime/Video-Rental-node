            <label for="lastName">Nazwisko:</label>
            <input type="text" name="lastName" value="Kowalski" id="lastName" disabled />

            <label for="Number">Numer telefonu:</label>
            <input type="tel" name="Number" value="510 111 555" id="number" disabled />
        
            <label for="E-mail">E-mail:</label>
            <input type="email" name="E-mail" value="jan.kowalski@acme.com" id="e-mail" disabled />

            <label for="Password">Hasło:</label>
            <input type="password" name="Password" value="**********" id="password" disabled />
        
        </form>
        
        <p><a href="#" class="btn-edit mt-3">Edytuj</a></p>
        
        <h2>Szczegóły wypożyczenia</h2>
        <table class="list">
            <thead>
                <tr>
                    <th>Nazwa filmu</th>
                    <th>Rok premiery</th>
                    <th>Data wypożyczenia</th>
                    <th>Data zwrotu</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Jumanji</td>
                    <td>1995</td>
                    <td>2020-11-03</td>
                    <td>2020-11-09</td>
                </tr>
                <tr>
                    <td>Noc w Muzeum</td>
                    <td>2006</td>
                    <td>2020-11-20</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <p><a href="/user"class="btn-details">Powrót</a></p>
    </main>
    
    
    <script>
        $(document).ready(function(){
            $('.btn-edit').click(function(){
                $('.info').removeClass('d-none').show()
            }) 
        });
    </script>
